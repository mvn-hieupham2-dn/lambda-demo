{
   "name": "lambda-typescript",
   "version": "1.0.0",
   "description": "Nodejs LambdaFunction typescript",
   "scripts": {
      "test": "jest --bail --coverage --coverageDirectory=coverage --maxWorkers=4 --forceExit",
      "build": "npm run build-ts && npm run lint",
      "build-ts": "rm -rf dist && tsc",
      "build-api": "npm run build-ts && npm run lint && npm run copy-dependencies && npm run install-dependencies",
      "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
      "start:sam": "sam local start-api --env-vars env.json --docker-network=boilerplate-lambda-typescript-local-network --skip-pull-image",
      "start:dev": "concurrently \"tsc --watch\" \"npm run start:sam\"",
      "install-dependencies": "cd dist/layers/dependencies/nodejs && npm i",
      "copy-dependencies": "cp -R src/layers/dependencies dist/layers/dependencies",
      "prepare": "husky install",
      "typeorm": "typeorm-ts-node-commonjs"
   },
   "author": "",
   "license": "ISC",
   "devDependencies": {
      "@babel/core": "^7.20.2",
      "@babel/preset-env": "^7.20.2",
      "@babel/preset-typescript": "^7.18.6",
      "@commitlint/cli": "^17.2.0",
      "@commitlint/config-conventional": "^17.2.0",
      "@types/jest": "^29.2.2",
      "@types/node": "^16.11.10",
      "@typescript-eslint/eslint-plugin": "^5.40.0",
      "@typescript-eslint/parser": "^5.40.0",
      "babel-jest": "^29.2.2",
      "concurrently": "^7.4.0",
      "eslint": "^8.25.0",
      "prettier": "2.7.1",
      "ts-jest": "^29.0.3",
      "ts-node": "10.7.0",
      "typescript": "4.5.2"
   },
   "dependencies": {
      "aws-lambda": "^1.0.7",
      "aws-sdk": "^2.1231.0",
      "bcryptjs": "^2.4.3",
      "class-transformer": "^0.5.1",
      "class-validator": "^0.13.2",
      "http-status-codes": "^2.2.0",
      "jsonwebtoken": "^8.5.1",
      "loglevel": "^1.8.0",
      "pg": "^8.8.0",
      "ts-node": "^10.9.1",
      "typeorm": "^0.3.10"
   },
   "lint-staged": {
      "**/*.ts": [
         "eslint --fix"
      ]
   }
}
